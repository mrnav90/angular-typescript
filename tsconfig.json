{
  "compilerOptions": {
    "target": "es5",
    "removeComments": true,
    "sourceMap": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": false,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "types": [
      "angular",
      "angular-ui-router",
      "angular-cookies",
      "angular-translate",
      "angular-local-storage",
      "angular-ui-bootstrap",
      "angular-toastr",
      "angular-sanitize",
      "jquery",
      "node"
    ]
  },
  "exclude": [
    "public",
    "node_modules",
    "!node_modules/@types",
    "dist"
  ]
}
